#!/usr/bin/env bash
# Configure Nginx server so that /redirect_me is redirecting to another page
#!/usr/bin/env bash
# Configure Nginx server so that /redirect_me is redirecting to another page
sudo apt-get -y update
sudo apt-get -y install nginx
sudo ufw allow 'Nginx HTTP'
echo "Hello World!" > /var/www/html/index.html
sed -i '/listen 80 default_server/a rewrite ^/redirect_me https://www.youtube.com/watch?v=1tnj3UCkuxU&list=PLhQjrBD2T383f9scHRNYJkior2VvYjpSL&index=3 permanent;' /etc/nginx/sites-available/default
service nginx restart
